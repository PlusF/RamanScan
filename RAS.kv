#:kivy 1.0.9

<YesNoDialogContent>:
    RelativeLayout:
        pos_hint: {'x': 0.5, 'y':0.5}
        Label:
            size_hint: 0.4, 0.3
            pos_hint: {'x': -0.2, 'y': 0}
            text: root.message
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': -0.4, 'y': -0.5}
            text: 'Yes'
            on_release: root.yes()
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': 0, 'y': -0.5}
            text: 'Cancel'
            on_release: root.cancel()

<SaveDialogContent>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.folder
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: 0.1
            multiline: False

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<ErrorDialogContent>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.message
        Button:
            text: "OK"
            on_release: root.ok()

<RASDriver>:
    orientation: 'horizontal'

    BoxLayout:
        size_hint_x: 0.5
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.6
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Start'
                Label:
                    text: str(round(root.start_pos[0], 2))
                Label:
                    text: str(round(root.start_pos[1], 2))
                Button:
                    id: button_set_start
                    text: 'Set Start'
                    on_release: root.start_pos = root.current_pos
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Current'
                Label:
                    text: str(round(root.current_pos[0], 2))
                Label:
                    text: str(round(root.current_pos[1], 2))
                Label:
                    text:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Goal'
                Label:
                    text: str(round(root.goal_pos[0], 2))
                Label:
                    text: str(round(root.goal_pos[1], 2))
                Button:
                    id: button_set_goal
                    text: 'Set Goal'
                    on_release: root.goal_pos = root.current_pos
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Go to'
                TextInput:
                    id: input_pos_x
                    halign: 'center'
                    valign: 'center'
                    multiline: False
                TextInput:
                    id: input_pos_y
                    halign: 'center'
                    valign: 'center'
                    multiline: False
                Button:
                    id: button_go
                    text: 'Go to'
                    on_release: root.go(input_pos_x.text, input_pos_y.text)
        BoxLayout:
            size_hint_y: 0.3
            padding: [0, 30, 0, 0]
            orientation: 'horizontal'
            Button:
                id: button_initialize
                text: 'Initialize'
                on_release: root.initialize()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: str(root.current_temperature) + ' Â°C'
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            Label:
                text: 'Integration [s]'
            TextInput:
                id: input_integration
                text: str(root.integration)
                halign: 'center'
                valign: 'center'
                hint_text:'30'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_integration(input_integration.text)
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            Label:
                text: 'Accumulation'
            TextInput:
                id: input_accumulation
                text: str(root.accumulation)
                halign: 'center'
                valign: 'center'
                hint_text:'1'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_accumulation(input_accumulation.text)
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'
            Label:
                text: 'Pixel size [um]'
            TextInput:
                id: input_pixel_size
                text: str(root.pixel_size)
                halign: 'center'
                valign: 'center'
                hint_text:'1'
                pos_hint: {'center_y': 0.5}
                multiline: False
                on_text: root.set_pixel_size(input_pixel_size.text)
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            Button:
                id: button_acquire
                text: 'Acquire'
                on_release: root.acquire_clicked()
            FloatLayout:
                size_hint_x: 0
                CircularProgressBar
                    id: progress_acquire
                    value: root.progress_value_acquire
                    pos: self.parent.pos[0] - 100, self.parent.pos[1] + 5
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            Button:
                id: button_scan
                text: 'Start Scan'
                on_release: root.scan_clicked()
            FloatLayout:
                size_hint_x: 0
                CircularProgressBar
                    id: progress_scan
                    value: root.progress_value_scan
                    pos: self.parent.pos[0] - 100, self.parent.pos[1] + 5
        Button:
            id: button_save
            text: 'Save'
            size_hint_y: 0.2
            on_release: root.save_dialog.open()
        Button:
            id: button_save_as_hdf5
            text: 'Save as HDF5'
            size_hint_y: 0.2
            on_release: root.save_as_hdf5_dialog.open()

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                id: graph_line
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    id: graph_contour
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.1
                    Label:
                        text: 'Map range'
                    TextInput:
                        id: input_map_range_1
                        halign: 'center'
                        valign: 'center'
                        pos_hint: {'center_y': 0.5}
                        multiline: False
                        on_text: root.set_map_range(input_map_range_1.text, input_map_range_2.text)
                        text: str(root.map_range_1)
                    TextInput:
                        id: input_map_range_2
                        halign: 'center'
                        valign: 'center'
                        pos_hint: {'center_y': 0.5}
                        multiline: False
                        on_text: root.set_map_range(input_map_range_1.text, input_map_range_2.text)
                        text: str(root.map_range_2)


        Label:
            text: root.msg
            size_hint_y: 0.1
