#:kivy 1.0.9

<VBox@BoxLayout>:
    orientation: "vertical"

<HBox@BoxLayout>:
    orientation: "horizontal"

<YesNoDialogContent>:
    RelativeLayout:
        pos_hint: {'x': 0.5, 'y':0.5}
        Label:
            size_hint: 0.4, 0.3
            pos_hint: {'x': -0.2, 'y': 0}
            text: root.message
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': -0.4, 'y': -0.5}
            text: 'Yes'
            on_release: root.yes()
        Button:
            size_hint: 0.4, 0.4
            pos_hint: {'x': 0, 'y': -0.5}
            text: 'Cancel'
            on_release: root.cancel()

<SaveDialogContent>:
    VBox
        size: root.size
        pos: root.pos
        FileChooserListView:
            id: filechooser
            path: root.folder
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: 0.1
            multiline: False

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<ErrorDialogContent>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.message
        Button:
            text: "OK"
            on_release: root.ok()

<MoveButton@Button>:
    background_color: (166/255,166/255,166/255,1)

<MoveImage@Image>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y

<BasicTextInput@TextInput>:
    halign: 'center'
    valign: 'center'
    pos_hint: {'center_y': 0.5}
    multiline: False

<RASDriver>:
    orientation: 'horizontal'

    VBox
        size_hint_x: 0.5
        # ステージ関連
        TabbedPanel:
            do_default_tab: False
            size_hint_y: 0.6
            # タブ1: start goal 設定
            TabbedPanelItem:
                text: 'settings'
                HBox:
                    VBox:
                        Label:
                            text: 'Start'
                        Label:
                            text: str(round(root.start_pos[0], 2))
                        Label:
                            text: str(round(root.start_pos[1], 2))
                        Button:
                            id: button_set_start
                            text: 'Set Start'
                            on_release: root.start_pos = root.current_pos
                    VBox:
                        Label:
                            text: 'Current'
                        Label:
                            text: str(round(root.current_pos[0], 2))
                        Label:
                            text: str(round(root.current_pos[1], 2))
                        Label:
                            text:
                    VBox:
                        Label:
                            text: 'Goal'
                        Label:
                            text: str(round(root.goal_pos[0], 2))
                        Label:
                            text: str(round(root.goal_pos[1], 2))
                        Button:
                            id: button_set_goal
                            text: 'Set Goal'
                            on_release: root.goal_pos = root.current_pos
                    VBox:
                        Label:
                            text: 'Go to'
                        BasicTextInput:
                            id: input_pos_x
                        BasicTextInput:
                            id: input_pos_y
                        Button:
                            id: button_go
                            text: 'Go to'
                            on_release: root.go(input_pos_x.text, input_pos_y.text)
            # タブ2: jog
            TabbedPanelItem:
                text: 'jog'
                HBox:
                    VBox:
                        Label:
                            text: 'Current'
                        Label:
                            text: str(round(root.current_pos[0], 2))
                        Label:
                            text: str(round(root.current_pos[1], 2))
                    VBox:
                        VBox:
                            Label:
                                id: speed_text
                                text: f'Jog speed: {root.jog_speed}'
                                size_hint_y: 0.1
                            Slider:
                                id: vel_slider
                                size_hint_y: 0.9
                                orientation: 'vertical'
                                min: 1
                                max: 9
                                step: 1
                                on_value:
                                    root.jog_speed = self.value
                                    speed_text.text = f'Jog speed: {root.jog_speed}'
                    GridLayout:
                        rows: 3
                        cols: 3
                        Button:
                            disabled: True
                        MoveButton:
                            id: move_top
                            on_press: root.start_jogging(2, '+')
                            on_release: root.stop_jogging(2, '+')
                            MoveImage:
                                source: "assets/top50.png"
                        Button:
                            disabled: True
                        MoveButton:
                            id: move_left
                            on_press: root.start_jogging(1, '-')
                            on_release: root.stop_jogging(1, '-')
                            MoveImage:
                                source: "assets/left50.png"
                        Button:
                            disabled: True
                            background_color: (0, 0, 0, 1)
                        MoveButton:
                            id: move_right
                            on_press: root.start_jogging(1, '+')
                            on_release: root.stop_jogging(1, '+')
                            MoveImage:
                                source: "assets/right50.png"
                        Button:
                            disabled: True
                        MoveButton:
                            id: move_bottom
                            on_press: root.start_jogging(2, '-')
                            on_release: root.stop_jogging(2, '-')
                            MoveImage:
                                source: "assets/bottom50.png"
                        Button:
                            disabled: True
        # 検出器関連
        HBox:
            size_hint_y: 0.3
            padding: [0, 30, 0, 0]
            Button:
                id: button_initialize
                text: 'Initialize'
                on_release: root.initialize()
            Label:
                text: str(root.current_temperature) + ' °C'
        HBox:
            size_hint_y: 0.12
            Label:
                text: 'Integration [s]'
            BasicTextInput:
                id: input_integration
                text: str(root.integration)
                hint_text:'30'
                on_text: root.set_integration(input_integration.text)
        HBox
            size_hint_y: 0.12
            Label:
                text: 'Accumulation'
            BasicTextInput:
                id: input_accumulation
                text: str(root.accumulation)
                hint_text:'1'
                on_text: root.set_accumulation(input_accumulation.text)
        HBox:
            size_hint_y: 0.12
            Label:
                text: 'Pixel size [um]'
            BasicTextInput:
                id: input_pixel_size
                text: str(root.pixel_size)
                hint_text:'1'
                on_text: root.set_pixel_size(input_pixel_size.text)
        HBox:
            size_hint_y: 0.2
            Button:
                id: button_acquire
                text: 'Acquire'
                on_release: root.acquire_clicked()
            FloatLayout:
                size_hint_x: 0
                CircularProgressBar
                    id: progress_acquire
                    value: root.progress_value_acquire
                    pos: self.parent.pos[0] - 100, self.parent.pos[1] + 5
        HBox:
            size_hint_y: 0.2
            Button:
                id: button_scan
                text: 'Start Scan'
                on_release: root.scan_clicked()
            FloatLayout:
                size_hint_x: 0
                CircularProgressBar
                    id: progress_scan
                    value: root.progress_value_scan
                    pos: self.parent.pos[0] - 100, self.parent.pos[1] + 5
        Button:
            id: button_save
            text: 'Save'
            size_hint_y: 0.2
            on_release: root.save_dialog.open()
        Button:
            id: button_save_as_hdf5
            text: 'Save as HDF5'
            size_hint_y: 0.2
            on_release: root.save_as_hdf5_dialog.open()
    # グラフ関連
    VBox:
        HBox:
            BoxLayout:
                id: graph_line
            VBox:
                BoxLayout:
                    id: graph_contour
                # マッピングのレンジ設定
                HBox:
                    size_hint_y: 0.06
                    Label:
                        text: 'Map range'
                    BasicTextInput:
                        id: input_map_range_1
                        text: str(root.map_range_1)
                        on_text: root.set_map_range(input_map_range_1.text, input_map_range_2.text)
                    BasicTextInput:
                        id: input_map_range_2
                        text: str(root.map_range_2)
                        on_text: root.set_map_range(input_map_range_1.text, input_map_range_2.text)

        Label:
            text: root.msg
            size_hint_y: 0.1
